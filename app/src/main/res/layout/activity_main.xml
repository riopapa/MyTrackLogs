<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/mainMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" />

    <LinearLayout
        android:id="@+id/timeInfo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_round"
        android:layout_marginTop="32dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/trackInfo"
        android:layout_margin="4dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/information"
            android:layout_height="match_parent"
            android:text="시작시각"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/information"
            android:layout_height="wrap_content"
            android:text="03-11(목)"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/information"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="00:99"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trackInfo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_round"
        android:padding="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/timeInfo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="4dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/information"
            android:text="이동상황"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/information"
            android:text="99 분"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/meter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/information"
            android:text="99m"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabGoStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@mipmap/button_start" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWalkDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/fabGoStop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@mipmap/footprint" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/fabGoStop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@mipmap/button_pause" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/start_time"
            android:textStyle="bold"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <DatePicker
            android:id="@+id/datePickerStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:datePickerMode="spinner"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="-10dp"
            android:layout_marginBottom="-20dp"
            android:paddingEnd="4dp"
            android:paddingTop="-16dp"
            android:paddingBottom="-16dp"
            android:calendarViewShown="false"
            android:theme="@style/myDatePicker"
            android:headerBackground="@color/trackActive"
            android:headerTimeTextAppearance="@style/Base.TextAppearance.AppCompat.Display2"
            android:layerType="software" />

        <TimePicker
            android:id="@+id/timePickerStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:timePickerMode="spinner"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-20dp"
            android:paddingEnd="4dp"
            android:paddingTop="-16dp"
            android:paddingBottom="-16dp"
            android:theme="@style/myTimePicker"
            android:headerBackground="@color/trackActive"
            android:headerTimeTextAppearance="@style/Base.TextAppearance.AppCompat.Display2"
            android:layerType="software" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/finish_time"
            android:textStyle="bold"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <DatePicker
            android:id="@+id/datePickerFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:datePickerMode="spinner"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-20dp"
            android:layout_marginRight="-10dp"
            android:layout_marginBottom="-20dp"
            android:paddingTop="-16dp"
            android:paddingBottom="-16dp"
            android:calendarViewShown="false"
            android:theme="@style/myDatePicker"
            android:headerBackground="@color/trackActive"
            android:headerTimeTextAppearance="@style/TextAppearance.AppCompat.Display2"
            tools:animateLayoutChanges="@tools:sample/date/hhmm" />

        <TimePicker
            android:id="@+id/timePickerFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:timePickerMode="spinner"
            android:theme="@style/myTimePicker"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-20dp"
            android:paddingTop="-16dp"
            android:paddingBottom="-16dp"
            android:headerBackground="@color/trackActive"
            android:headerTimeTextAppearance="@style/TextAppearance.AppCompat.Display2"
            tools:animateLayoutChanges="@tools:sample/date/hhmm" />
    </LinearLayout>

    <TextView
        android:id="@+id/showMeMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ab"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabGoStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@mipmap/magnify_glass" />

</LinearLayout>
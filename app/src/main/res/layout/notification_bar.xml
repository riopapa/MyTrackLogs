<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_customNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/notifyBar"
    android:baselineAligned="false"
    tools:ignore="ContentDescription"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/nTrackIcon"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@mipmap/my_track_log" />

    <TextView
        android:id="@+id/nDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="8"
        android:textAlignment="center"
        android:layout_margin="4dp"
        android:textColor="@color/notifyText"
        android:textStyle="bold"
        android:text="03-11(목) 11:14"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nLaps"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="4km\n30분"
        android:textColor="@color/notifyText"
        android:layout_margin="4dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/nGoStop"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:src="@mipmap/button_start" />

    <ImageView
        android:id="@+id/nPause"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:src="@mipmap/button_pause" />

    <ImageView
        android:id="@+id/nExit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="6dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@mipmap/exit_app" />


</LinearLayout>

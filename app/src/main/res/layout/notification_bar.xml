<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_customNotification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:ignore="ContentDescription"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/notifyBar"
        android:orientation="horizontal" >

    <ImageView
        android:id="@+id/nTrackIcon"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@mipmap/my_track_log" />

    <TextView
        android:id="@+id/nDateTime"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="4dp"
        android:textColor="@color/notifyText"
        android:textStyle="bold"
        android:text="03-11(목) 11:14"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nLaps"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/notifyText"
        android:layout_margin="4dp"
        android:text="4km\n30분"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/nGoStop"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@mipmap/button_start" />

    <ImageView
        android:id="@+id/nPause"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@mipmap/button_pause" />

    <ImageView
        android:id="@+id/nExit"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_margin="6dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@mipmap/exit_app" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/nConfirm"
        android:visibility="visible"
        android:background="@color/mainScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="4dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:src="@mipmap/my_face" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="4dp"
            android:textColor="@color/notifyText"
            android:textStyle="bold"
            android:text="기록을 종료할까요?"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/nYes"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:src="@mipmap/confirm_yes" />

        <ImageView
            android:id="@+id/nNo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:src="@mipmap/confirm_no" />

    </LinearLayout>
</LinearLayout>
